  <div>
   <h1 class="font-bold text-4xl">購入履歴</h1>
   <%=paginate @orders %>
      <table>
        <% @orders.each do |order| %>
          <tr>
            <th>商品名</th>
            <td><%=order.product.product_name %></td>
          </tr>
          <tr>
            <th>商品名（カナ）</th>
            <td><%=order.product.product_name_kana %></td>
          </tr>
          <tr>
            <th>商品単価</th>
            <td><%=order.product.product_price %></td>
          </tr>
          <tr>
            <th>購入数</th>
            <td><%=order.order_number %></td>
          </tr>
          <tr>
            <th>購入合計額</th>
            <td><%=order.order_sumprice%></td>
          </tr>
          <tr>
            <th>購入日</th>
            <td><%=order.created_at.to_fs(:datetime_jp) %></td>
          </tr>
        <% end %>        
      </table>
  </div>
