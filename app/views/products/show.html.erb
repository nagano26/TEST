<div>
  <h1 class="font-bold text-4xl">商品詳細</h1>
      <table> 
        <tr>
          <th>商品名</th>
          <td><%=@product.product_name %></td>
        </tr>
        <tr> 
          <th>在庫数</th> 
          <td><%= @product.product_zaiko %></td>
        </tr> 
        <tr>
          <th>単価</th>
          <td><%= @product.product_price%></td>
        </tr>
        <tr>
          <th>販売停止フラグ</th>            
          <td><%= @product.product_stopflag%><td>
        </tr>                                                                 
      </table>
      <%if @product.errors.any? %>
        <p class="errors_message">在庫数の整合性が取れません</p>
      <% end %>
      <%= render "orders/new" %>
      <%= link_to "一覧に戻る", products_path %>
</div>
